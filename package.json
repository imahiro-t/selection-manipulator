{
  "name": "selection-manipulator",
  "displayName": "Selection Manipulator",
  "description": "Processing tools for selected text: select words, unique lines, sort lines, reverse lines...",
  "version": "0.0.3",
  "publisher": "erintheblack",
  "author": {
    "name": "Takashi Imahiro"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/imahiro-t/selection-manipulator.git"
  },
  "galleryBanner": {
    "color": "#000",
    "theme": "dark"
  },
  "icon": "images/icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "selection-manipulator.multi-selection",
        "title": "Convert to Multi Selection",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.extract",
        "title": "Extract Lines",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.extract.exclude-blank-rows",
        "title": "Extract Lines exclude Blank Rows",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.unique",
        "title": "Unique Lines",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.reverse",
        "title": "Reverse Lines",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.shuffle",
        "title": "Shuffle Lines",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.sort.string.ascending",
        "title": "Sort Lines Ascending by string",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.sort.string.descending",
        "title": "Sort Lines Descending by string",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.sort.number.ascending",
        "title": "Sort Lines Ascending by number",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.sort.number.descending",
        "title": "Sort Lines Descending by number",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.json.format",
        "title": "Format JSON (Pretty Print)",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.json.minify",
        "title": "Minify JSON",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.json.parse",
        "title": "Parse JSON",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.json.stringify",
        "title": "Stringify JSON",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.xml.format",
        "title": "Format XML (Pretty Print)",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.xml.minify",
        "title": "Minify XML",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.base64.encode",
        "title": "Encode Base64",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.base64.decode",
        "title": "Decode Base64",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.count-occurrences.count",
        "title": "Count Occurrences sorting by count",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.count-occurrences.word",
        "title": "Count Occurrences sorting by word",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.count-up-list",
        "title": "Count Up to List",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.zero-padding",
        "title": "Zero Padding",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.base64.deflate",
        "title": "Deflate Base64",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.base64.unzip",
        "title": "Inflate Base64",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.calculation",
        "title": "Calculate Mathematical Expression",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.calculation.date",
        "title": "Transform to Timestamp and ISO 8601",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.regex.g",
        "title": "Regex (/PATTERN/g)",
        "category": "Selection Manipulator"
      },
      {
        "command": "selection-manipulator.regex.gi",
        "title": "Regex (/PATTERN/gi)",
        "category": "Selection Manipulator"
      }
    ],
    "submenus": [
      {
        "id": "selection-manipulator.submenu",
        "label": "Selection Manipulator"
      },
      {
        "id": "selection-manipulator.select.submenu",
        "label": "Select"
      },
      {
        "id": "selection-manipulator.extract.submenu",
        "label": "Extract"
      },
      {
        "id": "selection-manipulator.sort.submenu",
        "label": "Sort"
      },
      {
        "id": "selection-manipulator.transform.submenu",
        "label": "Transform"
      },
      {
        "id": "selection-manipulator.json.submenu",
        "label": "JSON"
      },
      {
        "id": "selection-manipulator.xml.submenu",
        "label": "XML"
      },
      {
        "id": "selection-manipulator.calculation.submenu",
        "label": "Calculate"
      },
      {
        "id": "selection-manipulator.regex.submenu",
        "label": "Regular Expression"
      },
      {
        "id": "selection-manipulator.base64.submenu",
        "label": "Base64"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "submenu": "selection-manipulator.submenu",
          "group": "selection-manipulator"
        }
      ],
      "selection-manipulator.select.submenu": [
        {
          "command": "selection-manipulator.multi-selection",
          "group": "selection-manipulator@0"
        }
      ],
      "selection-manipulator.extract.submenu": [
        {
          "command": "selection-manipulator.extract",
          "group": "selection-manipulator@0"
        },
        {
          "command": "selection-manipulator.extract.exclude-blank-rows",
          "group": "selection-manipulator@1"
        },
        {
          "command": "selection-manipulator.unique",
          "group": "selection-manipulator@2"
        },
        {
          "command": "selection-manipulator.reverse",
          "group": "selection-manipulator@3"
        },
        {
          "command": "selection-manipulator.shuffle",
          "group": "selection-manipulator@4"
        },
        {
          "submenu": "selection-manipulator.sort.submenu",
          "group": "selection-manipulator@5"
        }
      ],
      "selection-manipulator.sort.submenu": [
        {
          "command": "selection-manipulator.sort.string.ascending",
          "group": "selection-manipulator@0"
        },
        {
          "command": "selection-manipulator.sort.string.descending",
          "group": "selection-manipulator@1"
        },
        {
          "command": "selection-manipulator.sort.number.ascending",
          "group": "selection-manipulator@2"
        },
        {
          "command": "selection-manipulator.sort.number.descending",
          "group": "selection-manipulator@3"
        }
      ],
      "selection-manipulator.transform.submenu": [
        {
          "when": "editorHasSelection && !editorHasMultipleSelections",
          "submenu": "selection-manipulator.json.submenu",
          "group": "selection-manipulator@0"
        },
        {
          "when": "editorHasSelection && !editorHasMultipleSelections",
          "submenu": "selection-manipulator.xml.submenu",
          "group": "selection-manipulator@1"
        },
        {
          "submenu": "selection-manipulator.base64.submenu",
          "group": "selection-manipulator@2"
        },
        {
          "command": "selection-manipulator.count-occurrences.count",
          "group": "selection-manipulator@3"
        },
        {
          "command": "selection-manipulator.count-occurrences.word",
          "group": "selection-manipulator@4"
        },
        {
          "command": "selection-manipulator.zero-padding",
          "group": "selection-manipulator@5"
        },
        {
          "command": "selection-manipulator.count-up-list",
          "group": "selection-manipulator@6"
        }
      ],
      "selection-manipulator.json.submenu": [
        {
          "command": "selection-manipulator.json.format",
          "group": "selection-manipulator@0"
        },
        {
          "command": "selection-manipulator.json.minify",
          "group": "selection-manipulator@1"
        },
        {
          "command": "selection-manipulator.json.parse",
          "group": "selection-manipulator@2"
        },
        {
          "command": "selection-manipulator.json.stringify",
          "group": "selection-manipulator@3"
        }
      ],
      "selection-manipulator.xml.submenu": [
        {
          "command": "selection-manipulator.xml.format",
          "group": "selection-manipulator@0"
        },
        {
          "command": "selection-manipulator.xml.minify",
          "group": "selection-manipulator@1"
        }
      ],
      "selection-manipulator.base64.submenu": [
        {
          "command": "selection-manipulator.base64.encode",
          "group": "selection-manipulator@0"
        },
        {
          "command": "selection-manipulator.base64.decode",
          "group": "selection-manipulator@1"
        },
        {
          "command": "selection-manipulator.base64.deflate",
          "group": "selection-manipulator@2"
        },
        {
          "command": "selection-manipulator.base64.unzip",
          "group": "selection-manipulator@3"
        }
      ],
      "selection-manipulator.calculation.submenu": [
        {
          "command": "selection-manipulator.calculation",
          "group": "selection-manipulator@0"
        },
        {
          "command": "selection-manipulator.calculation.date",
          "group": "selection-manipulator@1"
        }
      ],
      "selection-manipulator.regex.submenu": [
        {
          "command": "selection-manipulator.regex.g",
          "group": "selection-manipulator@0"
        },
        {
          "command": "selection-manipulator.regex.gi",
          "group": "selection-manipulator@1"
        }
      ],
      "selection-manipulator.submenu": [
        {
          "when": "editorHasSelection && !editorHasMultipleSelections",
          "submenu": "selection-manipulator.select.submenu",
          "group": "selection-manipulator@0"
        },
        {
          "submenu": "selection-manipulator.extract.submenu",
          "group": "selection-manipulator@1"
        },
        {
          "submenu": "selection-manipulator.transform.submenu",
          "group": "selection-manipulator@2"
        },
        {
          "submenu": "selection-manipulator.calculation.submenu",
          "group": "selection-manipulator@4"
        },
        {
          "submenu": "selection-manipulator.regex.submenu",
          "group": "selection-manipulator@5"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "xml-formatter": "^3.6.0"
  }
}
